@{
    ViewBag.Title = "Home Page";
}

@using OkReads.Models

<div class="jumbotron container">
    <h1>Find your next favorite book.</h1>
    <p class="lead">OkReads is <b>ok</b> for readers and book recommendations. Our mission is to help people find and share books they love.</p>
    @using (Html.BeginForm("Search", "Books", FormMethod.Get, htmlAttributes: new { @class = "navbar-form navbar-left" }))
    {
        <div class="form-group">
            @Html.TextBox("s", "", htmlAttributes: new { @class = "form-control", placeholder = "Title / Author / ISBN", style = "display: inline-block" })
            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
        </div>
    }
    <ul class="list-unstyled"   >
        @foreach (Genre item in ViewBag.Genres)
        {
            <li>
                @Html.ActionLink(item.Name, "Details", new { controller = "Genres", id = item.GenreId })
            </li>
        }
    </ul>
</div>

<div class="row">
    <div class="col">
        <h2>A Few Things You Can Do On OkReads</h2>
        <ul>
            <li>See what books your friends are reading.</li>
            <li>Track the books you're reading, have read, and want to read.</li>
            <li>Check out your personalized book recommendations. Our recommendation engine analyzes 20 billion (wishful thinking) data points to give suggestions tailored to your literary tastes.</li>
        </ul>
    </div>
</div>